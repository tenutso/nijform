<%- include('../layouts/header'); -%>
<div class="starter-template">
        <h1>Update a Radio Field</h1>
        <br />
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/forms">Forms</a></li>
            <li class="breadcrumb-item"><a href="/forms/field_list/<%= field.FormId %>"><%= field.Form.title %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Update a radio field</li>
          </ol>
        </nav>
        <br />
<form method="POST" action="/fields/radio/update_radio" >
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" id="title" aria-describedby="labelHelp" placeholder="Enter Title" value="<%= field.title %>">
    <small id="titleHelp" class="form-text text-muted">Enter a title for this form field</small>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" id="description" aria-describedby="descriptionlHelp" value="<%= field.description %>"></textarea>
    <small id="description" class="form-text text-muted">Enter a description for this form field</small>
  </div>
  <div class="form-group">
    <label for="required">Is this field required?</label>
    <select id="required" name="required" class="form-control">
      <option value="1" <%= field.required?"selected":"" %>>Yes</option>
      <option value="0" <%= field.required?"":"selected" %>>No</option>
    </select>
  </div>
  
  <input type="hidden" name="type" value="<%= field.type %>" />
  <input type="hidden" name="id" value="<%= field.id %>" />


  <button type="submit" class="btn btn-secondary">Save</button>

</form>
<%- include('../layouts/footer'); -%>