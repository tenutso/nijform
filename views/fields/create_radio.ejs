<%- include('../layouts/header'); -%>
<div class="starter-template">
        <h1>Create a Radio Field</h1>
        <br />
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/forms">Forms</a></li>
            <li class="breadcrumb-item"><a href="/forms/field_list/<%= form.id %>"><%= form.title %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Add a radio field</li>
          </ol>
        </nav>
        <br />
<form method="POST" action="/fields/radio/create_radio" >
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" id="title" aria-describedby="labelHelp" placeholder="Enter Title">
    <small id="titleHelp" class="form-text text-muted">Enter a title for this form field</small>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" id="description" aria-describedby="descriptionlHelp"></textarea>
    <small id="description" class="form-text text-muted">Enter a description for this form field</small>
  </div>
  <div class="form-group">
    <label for="required">Is this field required?</label>
    <select id="required" name="required" class="form-control">
      <option value="1">Yes</option>
      <option value="0" selected>No</option>
    </select>
  </div>
  <div class="form-group">
    <label for="sorting">Sorting</label>
    <input type="text" class="form-control" name="sorting" />
  </div>
  <input type="hidden" name="type" value="radio" />
  <input type="hidden" name="FormId" value="<%= form.id %>" />


  <button type="submit" class="btn btn-secondary">Save</button>

</form>
<%- include('../layouts/footer'); -%>